<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 按钮基类主题 -->
    <style name="QQThemeButton" parent="@android:style/Widget.CompoundButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/skin_common_btn_small_margin</item>
        <item name="android:layout_marginRight">@dimen/skin_common_btn_small_margin</item>
        <item name="android:paddingLeft">@dimen/skin_common_btn_small_padding</item>
        <item name="android:paddingRight">@dimen/skin_common_btn_small_padding</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginBottom">9dp</item>
    </style>

    <!-- 小按钮基类主题 -->
    <style name="QQThemeButtonSmall" parent="QQThemeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/skin_common_btn_small_height</item>
    </style>


    <!-- 小按钮-蓝色 主题 -->
    <style name="QQThemeButtonSmallBlue" parent="QQThemeButtonSmall">
        <item name="android:background">@drawable/skin_common_selector_btn_small_blue</item>
        <item name="android:textColor">@color/skin_common_selector_btn_blue</item>
    </style>

    <!-- 小按钮-白色 主题 -->
    <style name="QQThemeButtonSmallWhite" parent="QQThemeButtonSmall">
        <item name="android:background">@drawable/skin_common_selector_btn_small_white</item>
        <item name="android:textColor">@color/skin_common_selector_btn_white</item>
    </style>

</resources>