<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atm.customimageview.test.CustomImageViewActivity">

    <com.atm.customimageview.show.CustomImageView

        android:id="@+id/customImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <com.atm.customimageview.show.CustomImageView
        android:id="@+id/customImageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/customImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <com.atm.customimageview.show.CustomImageView
        android:id="@+id/customImageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/customImageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
